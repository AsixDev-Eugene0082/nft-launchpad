  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "chai": "^4.3.6",
    "eslint": "^7.32.0",
    "eth-sig-util": "^3.0.1",
    "ethereum-waffle": "^3.4.0",
    "ethereumjs-util": "^7.1.4",
    "ethers": "^5.4.7",
    "hardhat": "^2.9.3",
    "hardhat-deploy": "^0.9.24",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "scripts": {
    "start": "hardhat node --export './network.json'",
    "compile": "hardhat compile",
    "deploy": "hardhat deploy --export './network.json'",
    "test": "hardhat test",
    "lint": "eslint \"scripts/**/*.js\" && npm run prettier:check",
    "prettier": "prettier --write \"deploy/*.js\" \"scripts/**/*.js\" \"test/**/*.js\"",
    "prettier:sol": "prettier --write \"contracts/**/*.sol\"",
    "prettier:check": "prettier -c \"deploy/*.js\" \"scripts/**/*.js\" \"test/**/*.js\"",
    "slither": "slither . --filter-paths \"crytic|@openzeppelin\""
  },
  "dependencies": {
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@openzeppelin/contracts": "^4.4.2",
    "@openzeppelin/contracts-upgradeable": "^4.4.2",
    "commander": "^8.3.0",
    "dotenv": "^10.0.0",
    "erc721a": "^3.0.0",
    "lodash": "^4.17.21"
  },
  "installConfig": {
    "hoistingLimits": "dependencies"
  },
  "eslintIgnore": [
    "node_modules",
    "public"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "proseWrap": "always",
    "trailingComma": "none"
  }
